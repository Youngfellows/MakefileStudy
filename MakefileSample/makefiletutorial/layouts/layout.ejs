<% function renderToc(items) { %>
    <% for (item of items) { %>
        <ol>
            <li><a class="toc-item" href="#<%= item.id %>">
                    <%= item.text %>
                </a>
            </li>
            <% if (item.children.length> 0) { %>
                <%- renderToc(item.children) %>
                    <% } %>
        </ol>
        <% } %>
            <% } %>

                <body>

                    <div id='header'>
                        <div class='header-inside'>
                            <div class='title-left'>
                                <div class='title-wrapper'>
                                    <div class='title-wrapper2'>
